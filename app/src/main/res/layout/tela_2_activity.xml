<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tela_3_activity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="20dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione uma opção:"
        android:textSize="32sp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnGeradorValores"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="Gerador de Valores"
        android:textColor="#FFFFFF"
        android:backgroundTint="#03A9F4"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <Button
        android:id="@+id/btnInversorPalavra"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="Inversor de Palavra"
        android:textColor="#FFFFFF"
        android:backgroundTint="#03A9F4"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <Button
        android:id="@+id/btnRegistroEventos"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="Registro de Eventos"
        android:textColor="#FFFFFF"
        android:backgroundTint="#03A9F4"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
</LinearLayout>